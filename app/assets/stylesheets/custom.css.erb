.black { color: #121212; }
.blockquote-curly-brackets { /* margin: 0 23px 25px 23px; */ }
.blockquote-curly-brackets .ml { width: 14px; background:  url(<%= asset_path "blockquote-curly-brackets-ml-bg.png" %>) center left no-repeat; }
.blockquote-curly-brackets blockquote { margin: -5px 0; padding: 0 23px; }
.blockquote-curly-brackets .mr { width: 14px; background:  url(<%= asset_path "blockquote-curly-brackets-mr-bg.png" %>) center right no-repeat; }
.box_login_with_facebook p{ font-size: 13px; font-family: 'lucida grande',tahoma,verdana,arial,sans-serif; float: left; line-height: 55px; }
.box_login_with_facebook span{ font-size: 16px; font-family: 'lucida grande',tahoma,verdana,arial,sans-serif; color: blue; }
.content-wrapper .content .blockquote-curly-brackets { margin: 0 23px 25px 23px; }
.cats { float: left; width: 74px; padding: 4px 0px 4px 16px; background: url(<%= asset_path "cat-icon.gif" %>) no-repeat 0px 8px; }
.cats a { color: #A6A6A6;}
.cats a:hover { text-decoration: underline;}
.colr { color: #A91D3B !important; }
.divider_dots_full { background: url(<%= asset_path "divider_dots.gif" %>) center bottom no-repeat; margin-bottom: 40px; padding-top: 45px; clear: both; display: block; width: 100%; }
.desc { float: left; width: 100%; margin: 20px 0px 10px 0px; background: url(<%= asset_path "dashes.gif" %>) repeat-y 106px 0px; }
.email { background: url(<%= asset_path "icons/email.png" %>) no-repeat 0px 5px; display: block; padding-left: 20px; }
.float_right{ float: right; }
.float_left{ float: left; }
.facebook-login { margin: 10px 11px 0 0; }    
.facebook-login a { display: block; width: 193px; height: 45px; background: url(<%= asset_path 'login-facebook.png' %>) no-repeat scroll 0 -1px transparent; cursor: pointer; }
.facebook-login a:hover { display:block; width:193px; height:45px; background:url(<%= asset_path 'login-facebook.png' %>) no-repeat scroll 0 -45px transparent;}
.inner a{ color: #CE205A; }
.inner a:hover { color: #C63C2A; text-decoration: underline;}
.inner-quote { background: url(<%= asset_path 'icons/icon_quote.gif' %>) 10px 20px no-repeat white; border: 1px dotted #D0D0D0; padding: 20px 20px 20px 48px; }
.not-found{ font-size: 22px !important; margin-top: 20px !important; color: black; text-align: center; background: #FFF !important; }
.padding_top_10 { padding-top: 10px; }
.padding_top_40 { padding-top: 40px; }
.padding_bottom_40 { padding-bottom: 40px; }
.phone { background: url(<%= asset_path 'icons/phone.png' %>) no-repeat 0px 5px; display: block; padding-left: 20px; }
.post-opts { float: left; width: 105px; }
.post-date { float: left; width: 70px; height: 38px; padding: 10px; margin: 0px 0px 10px 0px; background: url(<%= asset_path 'date-bg.png' %>); }
.post-cats { float: left; margin-bottom: 20px; }
.post-share { float: left; }
.postby { float: left;  padding: 4px 0px 4px 16px; background: url(<%= asset_path 'name.png' %> ) no-repeat 0px 6px; }
.post-share a { float: left; margin-top: 7px; }
.post-details { width: 470px; float: right; }
.post-details h5 { padding: 0px 0px 5px 0px; }
.post-date h1 { float: left; font-weight: bold; padding: 0px 10px 0px 0px; }
.post-date h6 { font-size: 12px; } 
.quote-text { color: #663D18; font-family: 'DroidSerifItalic', Arial, Helvetica, sans-serif; font-size: 15px; font-weight: normal; line-height: 1.6em; }
.quote-author { text-align: right; color: #8F8F8F; margin: 10px 0 5px 0; }
.red{ color:red; text-transform: none !important; }
.align-center { text-align: center; }

