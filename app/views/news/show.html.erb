<div class="divider_thin"></div>
    <div class="grid_15 suffix_1 content">
        <div class="cat_title back_post">
            <%= link_to "Veja todas as notícias", news_index_path, :class => "link-back" %>
            <div class="social_buttons_top"><img src="images/temp/social_buttons.gif" width="217" height="20" alt="" /></div>
            <div class="clear"></div>
        </div>
        <div class="post-item post-detail">
          <h1><%= @news.titulo %></h1>
          <p> <%= @news.subtitulo %> </p>
          <div class="post-meta">
              <span class="icon_cat icon_cat_blog"><a href="#">Blog</a></span>
              <em>por <span class="author">  <%= @news.author.nome %> </span> &nbsp;|&nbsp; <%= @news.created_at.strftime("%d/%m/%Y") %> </em>
          </div>
          <div class="entry">
            <% if not @news.image.url(:medium) == "/images/medium/missing.png" %>
                <p> <%= image_tag @news.image.url(:medium) %>  </p>
            <% end %> 
            <p>  <%= @news.texto %> </p>
            
            <div class="clear"></div>
          </div>
        </div>
    
  
  <!-- comentário do Facebook -->
  <div class="add-comment" id="addcomments">
      <h3>Comente</h3>
      

  </div>
                      
    </div>

