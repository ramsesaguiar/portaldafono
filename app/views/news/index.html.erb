<h1>Listing news</h1>

<table>
  <tr>
    <th>Titulo</th>
    <th>Subtitulo</th>
    <th>Autor</th>
    <th>Texto</th>
    <th>Status</th>
    <th>Data</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= news.titulo %></td>
    <td><%= news.subtitulo %></td>
    <td><%= news.autor_id %></td>
    <td><%= news.texto %></td>
    <td><%= news.status %></td>
    <td><%= news.data %></td>
    <td><%= link_to 'Show', news %></td>
    <td><%= link_to 'Edit', edit_news_path(news) %></td>
    <td><%= link_to 'Destroy', news, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

