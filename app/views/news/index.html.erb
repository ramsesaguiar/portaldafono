<h1>Listing news</h1>

<table>
  <tr>
    <th>Titulo</th>
    <th>Subtitulo</th>
    <th>Autor</th>
    <th>Texto</th>
    <th>Data</th>
    <th></th>
    <th></th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= news.titulo %></td>
    <td><%= news.subtitulo %></td>
    <td><%= news.author.nome %></td>
    <td><%= news.texto %></td>
    <td><%= news.created_at.strftime("%d/%m/%Y") %></td>
    <% if not news.image.url(:medium) == "/images/medium/missing.png" %>
            <td> <%= image_tag news.image.url(:medium) %>  </td>
        <% end %>   
    <td><%= link_to 'Show', news %></td>
  </tr>
<% end %>
</table>

