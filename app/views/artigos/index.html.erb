<h1>Listing artigos</h1>

<table>
  <tr>
    <th>Autor</th>
    <th>Titulo</th>
    <th>Subtitulo</th>
    <th>Texto</th>
    <th>Palavra chave</th>
    <th>Data</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @artigos.each do |artigo| %>
  <tr>
    <td><%= artigo.autor_id %></td>
    <td><%= artigo.titulo %></td>
    <td><%= artigo.subtitulo %></td>
    <td><%= artigo.texto %></td>
    <td><%= artigo.palavra_chave %></td>
    <td><%= artigo.data %></td>
    <td><%= link_to 'Show', artigo %></td>
    <td><%= link_to 'Edit', edit_artigo_path(artigo) %></td>
    <td><%= link_to 'Destroy', artigo, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

