<div class="block">
  <div class="block_head">
    <div class="bheadl"></div>
    <div class="bheadr"></div>
    <h2>Entrevista > <%= @admin_interview.nome_entrevistado %></h2>
    <ul class="tabs">
      <li><%= link_to 'Editar', edit_admin_interview_path(@admin_interview) %></li>
      <li><%= link_to 'Voltar', admin_interview_path %></li>
    </ul>
  </div>    
  <div class="block_content tab_content">
    <% if notice.present? %>
      <div id="notice" class="message success"><p><%= notice %></p></div>
    <% end %>
    <p> <strong>ID:</strong> <%= @admin_interview.id %> </p>
    <p> <strong>Autor:</strong>  <%= @admin_interview.author.nome %> </p>
    <p> <strong>Nome do entrevistado:</strong>  <%= @admin_interview.nome_entrevistado %> </p>
    <p> <strong>Bio:</strong> <%= (@admin_interview.bio).html_safe if @admin_interview.bio.present? %> </p>
    <p> <strong>Entrevista:</strong> <%= (@admin_interview.texto).html_safe  %> </p>
    <p> <strong>Data:</strong> <%= @admin_interview.created_at.strftime("%d/%m/%Y") %> </p>
  </div>   
  <div class="bendl"></div>
  <div class="bendr"></div>
</div>    <!-- .block ends -->
