<div class="block">
  <div class="block_head">
    <div class="bheadl"></div>
    <div class="bheadr"></div>
    <h2>Debate > <%= @admin_discussion.slug %></h2>
    <ul class="tabs">
      <li><%= link_to 'Editar', edit_admin_discussion_path(@admin_discussion) %> </li>
      <li><%= link_to 'Voltar', admin_discussions_path %></li>
    </ul>
  </div>    
  <div class="block_content tab_content">
    <% if notice.present? %>
    <div id="notice" class="message success"><p><%= notice %></p></div>
    <% end %>
    <p> <strong>ID:</strong> <%= @admin_discussion.id %> </p>
    <p> <strong>Autor:</strong> <%= @admin_discussion.author.nome %> </p>
    <p> <strong>Titulo:</strong> <%= @admin_discussion.titulo %> </p>
    <p> <strong>Subtitulo:</strong> <%= @admin_discussion.subtitulo %> </p>
    <p> <strong>Texto:</strong> <%= @admin_discussion.texto %> </p>
    <p> <strong> Data de início do debate:</strong> <%= @admin_discussion.data_inicio.strftime("%d/%m/%Y") %> </p>
    <p> <strong> Data final do debate:</strong> <%= @admin_discussion.data_fim.strftime("%d/%m/%Y") %> </p>
    <p> <strong>Status:</strong>  <%= status_to_sim_nao @admin_discussion.status %> </p>
  </div>   
  <div class="bendl"></div>
  <div class="bendr"></div>

  </div>    <!-- .block ends -->
