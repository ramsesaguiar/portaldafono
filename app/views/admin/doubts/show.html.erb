<div class="block">
  <div class="block_head">
    <div class="bheadl"></div>
    <div class="bheadr"></div>
    <h2>Dúvida > <%= @admin_doubt.titulo %></h2>
    <ul class="tabs">
      <li><%= link_to 'Editar', edit_admin_doubt_path(@admin_doubt) %></li>
      <li><%= link_to 'Voltar', admin_doubts_path %></li>
    </ul>
  </div>    
  <div class="block_content tab_content">
    <% if notice.present? %>
      <div id="notice" class="message success"><p><%= notice %></p></div>
    <% end %>
    <p> <strong>ID:</strong> <%= @admin_doubt.id %> </p>
    <p> <strong>Usuário:</strong> <%= @admin_doubt.user.nome %> </p>
    <p> <strong>Data do envio da dúvida:</strong> <%= @admin_doubt.created_at.strftime("%d/%m/%Y") %> </p>
    <p> <strong>Titulo:</strong> <%= @admin_doubt.titulo.mb_chars.downcase.normalize.capitalize %> </p>
    <p> <strong>Texto:</strong> <%= (@admin_doubt.texto).html_safe %> </p>
    <p> <strong>Status:</strong>  <%= status_to_string @admin_doubt.status %> </p>
    <br /> 
    <p> <strong>Respondido por:</strong>  <%= @admin_doubt.author.nome if @admin_doubt.author.present?  %> </p>
    <p> <strong>Resposta:</strong>  <%= (@admin_doubt.resposta).html_safe if @admin_doubt.author.present? %> </p>
    <p> <strong>Data da resposta:</strong>  <%= @admin_doubt.data_resposta.strftime("%d/%m/%Y") if @admin_doubt.author.present? %> </p>
  </div>   
  <div class="bendl"></div>
  <div class="bendr"></div>

  </div>    <!-- .block ends -->
