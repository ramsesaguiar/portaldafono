<h1>Dúvidas</h1>
<% if @admin_doubts.present? %>
<table>
  <tr>
    <th>ID</th>
    <th>Dúvida enviada por</th>
    <th>Título</th>
    <th>Status</th>
    <th>Respondida por:</th>
    <th>Data resposta</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @admin_doubts.each do |admin_doubt| %>
  <tr>
    <td><%= admin_doubt.id %></td>
    <td><%= admin_doubt.user.nome  %></td>
    <td><%= admin_doubt.titulo %></td>
    <td><%= status_to_sim_nao admin_doubt.status %></td>
    <td><%=  admin_doubt.author.nome if admin_doubt.author.present? %></td>
    <td><%= admin_doubt.data_resposta.strftime("%d/%m/%Y") if admin_doubt.author.present? %></td>
    <td><%= link_to 'Visualizar', [:admin,admin_doubt] %></td>
    <td><%= link_to 'Editar', edit_admin_doubt_path(admin_doubt) %></td>
    <td><%= link_to 'Excluir', [:admin,admin_doubt], confirm: 'Deseja realmente excluir?', method: :delete %></td>
  </tr>
<% end %>
</table>
<% else %>
  <div> Nenhum registro encontrado </div>
<% end %>