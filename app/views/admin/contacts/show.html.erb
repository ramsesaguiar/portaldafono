<div class="block">
  <div class="block_head">
    <div class="bheadl"></div>
    <div class="bheadr"></div>
    <h2>Faleconosco > <%= @admin_contact.id %></h2>
    <ul class="tabs">
      <li><%= link_to 'Editar', edit_admin_contact_path(@admin_contact) %></li>
      <li><%= link_to 'Voltar', admin_contacts_path %></li>
    </ul>
  </div>    
  <div class="block_content tab_content">
    <% if notice.present? %>
      <div id="notice" class="message success"><p><%= notice %></p></div>
    <% end %>
    <p> <strong>ID:</strong> <%= @admin_contact.id %> </p>
    <p> <strong>Data:</strong> <%= @admin_contact.created_at.strftime("%d/%m/%Y") %> </p>
    <p> <strong>Nome:</strong> <%= @admin_contact.nome %> </p>
    <p> <strong>Email:</strong> <%= @admin_contact.email %> </p>
    <p> <strong>Texto:</strong> <%= (@admin_contact.texto).html_safe %> </p>
    <p> <strong> A mensagem foi respondida ?:</strong> <%= status_to_string @admin_contact.status %> </p>
    
  </div>   
  <div class="bendl"></div>
  <div class="bendr"></div>

  </div>    <!-- .block ends -->
