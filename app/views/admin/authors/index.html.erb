<div class="block">
  <div class="block_head">
    <div class="bheadl"></div>
    <div class="bheadr"></div>
    <h2>Autor > <%= @admin_author.nome %></h2>
    <ul class="tabs">
      <li><%= link_to 'Editar', edit_admin_author_path(@admin_author) %></li>
    </ul>
  </div>    
  <div class="block_content tab_content">
    <% if params[:notice].present? %>
      <div id="notice" class="message success"><p><%= params[:notice] %></p></div>
