    <p> <strong>Nome:</strong> <%= @admin_author.nome %> </p>
    <p> <strong>Apelido:</strong> <%= @admin_author.apelido %> </p>
    <p> <strong>Senha:</strong> <%= @admin_author.senha %> </p>
    <p> <strong>Crfa:</strong> <%= @admin_author.crfa %> </p>
    <p> <strong>Bibiografia:</strong> <%= (@admin_author.bibiografia).html_safe if @admin_author.bibiografia.present? %> </p>
   
    <p>
       <%= image_tag @admin_author.image.url(:thumb) %>
    </p>  
  </div>   
  <div class="bendl"></div>
  <div class="bendr"></div>

  </div>    <!-- .block ends -->
