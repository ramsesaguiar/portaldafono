<div class="block">
  <div class="block_head">
    <div class="bheadl"></div>
      <div class="bheadr"></div>
        <h2>Calendário de eventos</h2>
          <ul>
            <li> <%= link_to 'Novo evento', new_admin_calendar_path %> </li>
          </ul>
  </div>    
  <div class="block_content">
    <% if @admin_calendars.present? %>
      <table cellpadding="0" cellspacing="0" width="100%" class="sortable">
        <thead>
           <tr>
            <th> ID </th>
            <th> Data </th>
            <th>Título</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
           <% @admin_calendars.each do |admin_calendar| %>
          <tr>
            <td><%= admin_calendar.id %></td>
            <td><%= admin_calendar.data.strftime("%d/%m/%Y") %></td>
            <td><%= link_to admin_calendar.titulo, [:admin, admin_calendar] , :title => "Clique para visualizar o evento na íntegra" %></td>
            <td> <%= link_to 'Editar', edit_admin_calendar_path(admin_calendar) %>  </td>
            <td> <%= link_to 'Excluir', [:admin, admin_calendar], confirm: 'Are you sure?', method: :delete %>  </td>
          </tr>
           <% end %>
        </tbody>
    </table>
  <% else %>
      <div class="nenhum_registro_encontrado"> Nenhum evento encontrado </div>
  <% end %>
