<div class="block">
  <div class="block_head">
    <div class="bheadl"></div>
      <div class="bheadr"></div>
        <h2>Artigos</h2>
          <ul>
            <li> <%= link_to 'Novo artigo', new_admin_article_path %></li>
          </ul>
  </div>    
  <div class="block_content">
    <% if @admin_articles.present? %>
      <table cellpadding="0" cellspacing="0" width="100%" class="sortable">
        <thead>
          <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Data</th>
            <th>Destaque</th>
            <th>Author</th>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
          </tr>
        </thead>
        <tbody>
           <% @admin_articles.each do |admin_article| %>
          <tr>
            <td><%= admin_article.id %></td>
            <td><%= link_to admin_article.titulo, [:admin, admin_article] %></td>
            <td><%= admin_article.created_at.strftime("%d/%m/%Y") %></td>
            <td><%= status_to_sim_nao admin_article.destaque %></td>
            <td><%= admin_article.author.nome %> </td>
            <td><%= link_to 'Editar', edit_admin_article_path(admin_article) %></td>
            <td><%= link_to 'Excluir', [:admin, admin_article], confirm: 'Deseja realmente excluir?', method: :delete %></td>
          </tr>
           <% end %>
        </tbody>
    </table>
  <% else %>
      <div class="nenhum_registro_encontrado"> Nenhum registro encontrado </div>
  <% end %>
