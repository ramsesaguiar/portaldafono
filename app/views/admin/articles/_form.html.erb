<%= form_for [:admin, @admin_article] ,  :html => {:multipart=>true}  do |f| %>
  <% if @admin_article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin_article.errors.count, "erro") %> encontrado(s):</h2>

      <ul>
      <% @admin_article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :author_id %> *<br />
    <%= select("article", "author_id", Author.all.collect {|p| [ p.nome, p.id ]}, :selected => @admin_article.author_id,  :prompt => 'Selecione um autor') %>
  </div>
  <div class="field">
    <%= f.label :titulo %> * <br />
    <%= f.text_field :titulo %>
  </div>
  <div class="field">
    <%= f.label :subtitulo %><br />
    <%= f.text_field :subtitulo %>
  </div>
  <div class="field">
    <%= f.label :texto %> *<br />
    <%= f.text_area :texto %>
  </div>
  <div class="field">
    <%= f.label :palavras_chave %> *<br />
    <%= f.text_area :palavras_chave %>
  </div>
  <div class="field">
    <%= f.label :destaque %> <br />
    <%= select("article", "destaque",  hash_to_sim_nao , :selected => @admin_article.destaque,  :prompt => 'Selecione') %>
  </div>
  <div class="field">
    <%= f.label "Imagem" %> *<br />
    <%= f.file_field :image %>
  </div>
  
  <div class="actions">
    <%= f.submit "Salvar" %>
  </div>
<% end %>