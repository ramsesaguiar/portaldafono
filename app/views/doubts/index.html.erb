<h1>Listing doubts</h1>

<table>
  <tr>
    <th>Usuario</th>
    <th>Titulo</th>
    <th>Texto</th>
    <th></th>
  </tr>

<% @doubts.each do |doubt| %>
  <tr>
    <td><%= doubt.user.nome %></td>
    <td><%= doubt.titulo %></td>
    <td><%= doubt.texto %></td>
    <td><%= link_to 'Show', doubt %></td>
   </tr>
<% end %>
</table>

<br />

<%= link_to 'New Doubt', new_doubt_path %>
